<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.test.writting.TestWritingActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/custom_btn_test"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtTimeWrite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="20dp"
                    android:paddingTop="2dp"
                    android:paddingEnd="20dp"
                    android:paddingBottom="2dp"
                    android:text="4:59"
                    android:textColor="@color/white"
                    android:textSize="18dp"
                    android:textStyle="bold" />
            </RelativeLayout>
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Write a short paragraph introduce yourself , hobbies , hometown and place of work ."
            android:textSize="18dp"
            android:textColor="@color/black"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_editext"
            android:layout_marginTop="20dp"
            android:padding="15dp"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:id="@+id/edtWrite"
            android:hint="Điền từ còn thiếu"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/imgBack"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentBottom="true"
                android:padding="15dp"
                android:src="@drawable/ic_back" />

            <Button
                android:id="@+id/btnGuiDi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:background="@drawable/custom_button_login"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="Gửi đi"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="18dp" />
        </RelativeLayout>

    </LinearLayout>
</layout>